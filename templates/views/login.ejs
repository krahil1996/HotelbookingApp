    <body>
      <div class="container5">
        <h2>Welcome to AIR-BNB</h2>
        <form action="/login" method="POST">
          <label for="email">User email</label>
          <input type="email" id="email" name="email" placeholder="Enter a valid email address" required>
    
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter password" required>
    
          <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 15px;">
            <label for="remember" class="small">
              <input type="checkbox" id="remember" name="remember"> Remember me
            </label>
            <a href="#!" class="small">Forgot password?</a>
          </div>
    
          <button type="submit">Login</button>
          <p class="small">Don't have an account? <a href="/register">Register</a></p>
        </form>
      </div>
    </body>
    
